@using EntityLayer.Concrete
@model List<Portfolio>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="card-header">
    <h3 class="card-title">Proje Listesi</h3>
</div>
<div class="card-body p-0">
    <table class="table table-striped projects">
        <thead>
            <tr>
                <th style="width: 1%">
                    ID
                </th>
                <th style="width: 10%">
                    Başlık
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.PortfolioID
                    </td>
                    <td>
                        @item.Title
                    </td>
                    <td class="project-actions text-right">
                        <a class="btn btn-info btn-sm" href="/Portfolio/ShowPortfolio/@item.PortfolioID">
                            <i class="fas fa-pencil-alt">
                            </i>
                            Göster
                        </a>
                        <a class="btn btn-info btn-sm" href="/Portfolio/EditPortfolio/@item.PortfolioID">
                            <i class="fas fa-pencil-alt">
                            </i>
                            Düzenle
                        </a>
                        <a class="btn btn-danger btn-sm" href="/Portfolio/DeletePortfolio/@item.PortfolioID">
                            <i class="fas fa-trash">
                            </i>
                            Sil
                        </a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
    <br />
    <a href="/Portfolio/AddPortfolio" class="btn btn-primary">Yeni Proje Ekle</a>
</div>

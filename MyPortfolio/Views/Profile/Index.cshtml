@model MyPortfolio.Models.UserEditViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Profil Düzenleme Formu</h3>
    </div>
    <form method="post">
        <div class="card-body">
            <div class="form-group">
                <label for="exampleInputEmail1">Ad</label>
                <input type="text" class="form-control" name="Name" value="@Model.Name" placeholder="Ad">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Soyad</label>
                <input type="text" class="form-control" name="Surname" value="@Model.Surname" placeholder="Soyad">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Şifre</label>
                <input type="password" class="form-control" name="Password" value="@Model.Password" placeholder="Şifre">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Şifre Tekrar</label>
                <input type="password" class="form-control" name="PasswordConfirm" value="" placeholder="Şifre">
            </div>
        </div>
        <div class="card-footer">
            <button class="btn btn-primary">Kaydet</button>
        </div>
    </form>
</div>

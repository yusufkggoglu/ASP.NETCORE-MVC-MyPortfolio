﻿@using EntityLayer.Concrete
@model List<Skill>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-header">
    <h3 class="card-title">Yetenek Listesi</h3>
</div>
<div class="card-body p-0">
    <table class="table table-striped projects">
        <thead>
            <tr>
                <th style="width: 1%">
                    ID
                </th>
                <th style="width: 30%">
                    Başlık
                </th>
                <th style="width:20%">
                    Oran
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.SkillID
                    </td>
                    <td>
                        @item.SkillName
                    </td>
                    <td class="project_progress">
                        <div class="progress progress-sm">
                            <div class="progress-bar bg-green" role="progressbar" aria-valuenow=" @item.Value" aria-valuemin="0" aria-valuemax="100" style="width:  @item.Value%">
                            </div>
                        </div>
                        <small>
                            @item.Value
                        </small>
                    </td>
                    <td class="project-actions text-right">
                        <a class="btn btn-info btn-sm" href="/Skill/EditSkill/@item.SkillID">
                            <i class="fas fa-pencil-alt">
                            </i>
                            Düzenle
                        </a>
                        <a class="btn btn-danger btn-sm" href="/Skill/DeleteSkill/@item.SkillID">
                            <i class="fas fa-trash">
                            </i>
                            Sil
                        </a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
    <br />
    <a href="/Skill/AddSkill" class="btn btn-primary">Yeni Yetenek Ekle</a>
</div>